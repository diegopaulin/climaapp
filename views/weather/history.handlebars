{{#each errors}}
<div class="alert alert-danger">{{text}}</div>
{{else}}
{{/each}}

<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">Histórico de registos de clima</h1>
        <p class="lead text-muted">Listando o histórico das medições de clima salvas. Podem ser filtradas por cidade e o
            intervalo de tempo das pesquisas</p>
        <form action="/history/filter" method="post">
            <div class="row">
                <div class="col">
                    <input type="text" class="form-control" name="srcCity" placeholder="Nomde da cidade" value=""
                        required>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label for="date">Da inicial:</label>
                    <input type="date" class="form-control" data data-date-format="mm/dd/yyyy" name="srcDate"
                        placeholder="Data Inicial" value="">
                </div>
                <div class="col">
                    <label for="date">Data final</label>
                    <input type="date" class="form-control" data data-date-format="mm/dd/yyyy" name="srcEnd" value="">
                </div>
            </div>
            <button class="btn btn-success mt-3">Pesquisar</button>
        </form>
    </div>
</section>

<div class="album py-1 bg-light">
    <div class="container">
        <div class="album py-1 bg-light">
            <div class="container">
                <div class="row">
                    {{#each weathers}}
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            <img src={{imageUrl}} class="bd-placeholder-img card-img-top" width="100%" height="225">
                            <div class="card-body">
                                <p class="card-text">Consulta registrada em: {{date}} para a cidade de {{city}} foi de
                                    {{temperature}}ºC.</p>
                                <small>Observação:</small>
                                <p class="card-text">{{observation}}</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a href="/history/edit/{{_id}}"> <button
                                                class="btn btn-success">Editar</button></a>
                                        <a href="/history/delete/{{_id}}"> <button
                                                class="btn btn-danger">Remover</button></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{else}}
                    <h2>Nenhum registro de medição climática localizada</h2>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>
